@import '../service/**'

.controls
  height 20vh
  line-height 20vh
  margin 0 0 10vh
  text-align center
  display block
  font-size 0
  .upload__progress
    position absolute
    bottom 0
    left 0
    right 0
    height 0
    transition height .3s linear
    overflow hidden
    &__invert
      width 80px
      height 80px
      background-color $color_blue
      background-image url("../svg/photo-i.svg")
      border-radius 100% 100% 20px 100%
      position absolute
      bottom 0
      left 0
      right 0
      margin auto
      box-shadow inset 0 0 0 3px #fff
      &:before
        content "+"
        position absolute
        
        bottom 0
        right 0
        
        font-size 14px
        line-height 18px
        color $color_white
        width 20px 
        height 20px
        padding 20px 0 0 20px 
        border-radius 0 0 10px 0
  button
    overflow hidden
    pointer-events all
    outline none
    width 80px
    height 80px
    display inline-block
    vertical-align middle
    border-style none
    border-radius 100% 100% 20px 100%
    background $color_white 
    margin 0 20px
    cursor pointer
    position relative
    transition transform $transition-time
    will-change transform
    &[disabled]
      pointer-events none
      transform scale(1)
      &:focus,
      &:hover
        transform scale(1)
    &:before
      content "+"
      position absolute
      
      bottom 0
      right 0
      
      font-size 14px
      line-height 18px
      color $color_blue
      width 20px 
      height 20px
      padding 20px 0 0 20px 
      border-radius 0 0 10px 0
    &:focus,
    &:hover
      transform scale(1.2)
    &.note
      background-image url("../svg/notes.svg") 
    &.photo
      background-image url("../svg/photo.svg")
    &.weight
      background-image url("../svg/weight.svg") 

      