@import '../service/**'

.notes
  position fixed
  top 0
  left 0
  bottom 0
  width 50vw
  height 100vh 
  background-color $color_white
  padding 20px 
  box-sizing border-box
  font-size 16px
  line-height 24px
  font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif 
  color #333 
  overflow auto
  -ms-overflow-x hidden
  overflow-x hidden
  -ms-overflow-y auto
  overflow-y auto
  pointer-events all
  display none
  &__title
    border-bottom 1px solid #ededed
    padding 12px 0
    margin 0 0 24px
  &__note
    border-bottom 1px dotted #ededed
    margin 0 0 24px
    &:last-child
      border-bottom-style none
    p
      margin 0 0 24px 
    