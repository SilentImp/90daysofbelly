@import '../service/**'

.note-form
  width 90vw
  height 100vh
  position fixed
  left 0
  right 10vw
  top 0
  bottom 0 
  background-color $color_white
  z-index -1
  textarea
    pointer-events all
    display block
    border-style none
    width 100vw
    height 100vh
    padding 10px
    resize none
    box-sizing border-box
    margin 0
    font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif 
    font-size 16px
    line-height 24px
    font-weight normal
    outline none
    z-index 0
    
  button
    outline none
    pointer-events all
    background none
    color $color_white
    font-size 5vh 
    display block
    
    width 10vw
    height 10vw
    
    line-height 10vh
    text-align center
    padding 0
    margin 0
    border-style none
    
    z-index 0
    cursor pointer
  
  nav
    position absolute
    top 0
    left 100%
    