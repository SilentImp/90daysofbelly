@import '../service/**'

.day
  position relative
  display block
  text-align center
  height 300px
  width 100%
  
  &__footer-copy
    color $color_white
    font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif 
    font-size 9px
    line-height 13px
    pointer-events all
  
  &__footer
    position absolute
    min-height 40px
    bottom 20px
    left 20px
    right 20px
    padding 0
  
  &__copy
    padding 0 80px 0 0
    box-sizing border-box
  
  &__icons
    color $color_white
    font-size 9px
    line-height 13px
    font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif 
    pointer-events all
    a
      white-space nowrap
      pointer-events all
      color $color_white
      &:hover
        text-decoration none
  
  &__made-in-ukraine
    width 40px
    height 40px
    position absolute
    right 0
    top 50%
    margin-top -20px
    overflow hidden
    text-indent -9999px
    background-position 50% 50%
    background-repeat no-repeat
    background-size 40px 40px
    background-image url("../svg/ukraine.svg") 
    
  &__scroll-top
    background-color $color_white
    width 40px
    height 40px
    border-radius 100%
    margin auto auto 10px
    position absolute
    left 0
    right 0
    bottom 100%
    border-style none
    padding 0
    background-position 50% 50%
    background-repeat no-repeat
    background-size 40px 40px
    background-image url("../svg/up.svg") 
  
  &__overlay
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    background-color rgba(#c00,.0) 
    z-index 5
    pointer-events all
    cursor pointer
    display none
    opacity 0
    transition box-shadow $transition-time, opacity $transition-time
    box-shadow inset 0 0 0 100vh rgba(0, 0, 0, 0)
  
  &__media
    position absolute
    left 50%
    top 150px
    height 80px
    width 80px
    margin -40px 0 0 -40px
    line-height 80px
    text-align center
    
  &:nth-child(2n+2)
    .day__media
      .day__photos+.day__notes
        left auto
        right 110px 
    
  &__photos-count
    vertical-align middle
    display inline-block
    font-size 30px
    line-height 20px
    span
      font-size 20px
      display block

  &__photos
    outline none
    text-align center
    text-decoration none
    color $color_white 
    vertical-align middle
    display inline-block
    line-height 75px
    width 80px
    height 80px
    margin 0
    padding 0
    overflow visible
    border-radius 100%
    background url("../images/photo_icon.png") 50% 50% no-repeat
    background-size cover
    box-shadow 0 0 0 10px $color_white
    -ms-interpolation-mode nearest-neighbor
    image-rendering -moz-crisp-edges
    image-rendering   -o-crisp-edges
    image-rendering -webkit-optimize-contrast
    image-rendering pixelated
    font-family 'Lobster', cursive
    &.ng-hide + .day__notes
      left auto
      top auto
      position static
      
  &__notes
    position absolute
    top 10px
    left 110px 
      
    outline none    
    text-align center
    text-decoration none
    color $color_white 
    vertical-align middle
    display inline-block
    line-height 55px
    width 60px
    height 60px
    margin 0
    padding 0
    overflow visible
    border-radius 100%
    background-position 50% 50%
    background-repeat no-repeat
    background-size 50px 50px
    background-color $color_white 
    background-image url("../svg/notes.svg")
    font-family 'Lobster', cursive
  
  &__link:after
    content "."
    display block
    font-size 0
    line-height 0
    text-indent -999px
    overflow hidden
    height 300px
    width 40px
    background-color $color_white
    z-index 0
    position absolute 
    top 0
    left 50%
    margin-left -20px
    
  &:last-child
    height 40px
    padding-bottom 300px
    .day__link
      display none
            
  &:nth-child(2n+1)
    .day__link
      width 50%
      left 0
      right 50%
      top -20px
      bottom -20px
      overflow hidden
      position absolute 
      &:after
        width 260px
        height 260px
        left 100%
        margin 0 0 0 -190px
        border-radius 100%
        background none
        border 40px solid $color_white
      
  &:nth-child(2n+2)
    .day__link
      width 50%
      left 50%
      right 0
      top -20px
      bottom -20px
      overflow hidden
      position absolute
      &:after
        width 260px
        height 260px
        right 100%
        left auto
        position absolute
        margin 0 -190px 0 0
        border-radius 100%
        background none
        border 40px solid $color_white
      

  &:nth-child(2n+1)
    .day__weight
      position absolute
      right 50%
      left auto
      top 150px
      margin -40px 130px 0 0
  
  &:nth-child(2n+1):last-child
    .day__weight
      width auto
      height 40px
      width auto
      padding 0 60px 0 20px
      z-index -1
      line-height 40px 
      border-radius 20px 0 0 20px
      margin 0
      top -20px
      right 50%
      left auto
  
  &:nth-child(2n+2):last-child,    
  &:nth-child(2n+1):last-child
    .day__media
      top 60px
      left 0
      right 0
      margin auto
      width 80px
      height auto
      .day__photos
        margin-top 10px
        margin-bottom 30px
      .day__notes
        vertical-align top
        position relative
        left auto
        right auto
        top auto
        bottom auto
        margin 0
      
  &:nth-child(2n+2):last-child
    .day__weight
      width auto
      height 40px
      width auto
      padding 0 20px 0 60px
      z-index -1
      line-height 40px 
      border-radius 0 20px 20px 0
      margin 0
      top -20px
      left 50%
      right auto

  &__date
    z-index 1
    width 80px
    height 80px
    border-radius 100%
    background-color $color_white
    position absolute
    top -40px
    left 0
    right 0
    margin auto 
    line-height 80px
    text-align center
    font-size 0
    time
      pointer-events all
      font-size 30px
      display inline-block
      vertical-align middle
      line-height 20px
      b,
      span
        pointer-events none
      span
        font-size 20px
        position relative
        display block
      
  &__weight
    z-index 1
    position absolute
    left 50%
    top 150px
    margin -40px 0 0 130px
    height 80px
    width 80px 
    font-size 16px 
    text-align center
    line-height 80px
    background-color $color_white
    border-radius 100%
    color $color_blue
    